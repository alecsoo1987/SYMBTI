<script>

    // 보기 클릭 이벤트
    const answer_list = Array.from(document.querySelectorAll('.answerList li'));
    answer_list.forEach(item => {
        item.addEventListener('click', function () {
            answer_list.forEach(li => li.classList.remove('active'));
            this.classList.add('active');
        })
    })

    // 튜토리얼 시작 버튼
    document.querySelector('.tutorialBtn').addEventListener('click', () => {
        const tutorialQ = document.querySelector('.tutorial-question');
        tutorialQ.classList.remove('d-none');

        const tooltips = [
            new bootstrap.Tooltip(document.querySelector('.first-tooltip')),
            new bootstrap.Tooltip(document.querySelector('.second-tooltip')),
            new bootstrap.Tooltip(document.querySelector('.third-tooltip'))
        ];

        tooltips.forEach((tooltip, index) => {
            setTimeout(() => tooltip.show(), 2000 * (index + 1));
        });
    });

    // 결과보기 버튼 이벤트
    document.querySelector('.resultBtn').addEventListener('click', () => {
        const tutorialR = document.querySelector('.tutorial-result');
        const isAnyActive = answer_list.some(item => item.classList.contains('active'));

        if (!isAnyActive) {
            openModal();
        } else {
            tutorialR.classList.remove('d-none');
        } 
    });

    /* 모달 이벤트 */
    var modal = document.getElementById("selectError");
    function openModal() {
      modal.style.display = "block";
    }
</script>

